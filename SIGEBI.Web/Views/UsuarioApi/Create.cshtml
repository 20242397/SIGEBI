@model SIGEBI.Web.Models.UsuarioApi.UsuarioApiCreateModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="fw-bold mb-4">
    <i class="bi bi-person-plus-fill"></i> Crear Usuario
</h2>

<div class="card shadow-sm p-4">

    <form asp-action="Create" method="post">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

      
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label fw-bold"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

       
        <div class="mb-3">
            <label asp-for="Apellido" class="form-label fw-bold"></label>
            <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>

      
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="usuario@correo.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

       
        <div class="mb-3">
            <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese una contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

       
        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="809-000-0000" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

      
        <div class="mb-3">
            <label asp-for="Role" class="form-label fw-bold"></label>
            <select asp-for="Role" class="form-select">
                <option value="">Seleccione...</option>
                <option value="Admin">Admin</option>
                <option value="Docente">Docente</option>
                <option value="Estudiante">Estudiante</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2-circle"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

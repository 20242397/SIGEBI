@model SIGEBI.Web.Models.UsuarioApi.UsuarioApiModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="fw-bold mb-4">
    <i class="bi bi-person-badge"></i> Detalles del Usuario
</h2>

<div class="card shadow-sm p-4">

    <dl class="row">

        <dt class="col-sm-3 fw-bold">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>

        <dt class="col-sm-3 fw-bold">Correo</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3 fw-bold">Teléfono</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3 fw-bold">Rol</dt>
        <dd class="col-sm-9">
            @if (string.IsNullOrWhiteSpace(Model.Role))
            {
                <span class="badge bg-secondary">Sin rol</span>
            }
            else if (Model.Role.Trim().ToLower() == "admin")
            {
                <span class="badge bg-primary">Admin</span>
            }
            else if (Model.Role.Trim().ToLower() == "docente")
            {
                <span class="badge bg-info text-dark">Docente</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Estudiante</span>
            }
        </dd>

        <dt class="col-sm-3 fw-bold">Estado</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-danger") p-2">
                <i class="bi @(Model.Estado == "Activo" ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                @Model.Estado
            </span>
        </dd>

        <dt class="col-sm-3 fw-bold">Activo</dt>
        <dd class="col-sm-9">
            <span class="fw-bold @(Model.Activo ? "text-success" : "text-danger")">
                <i class="bi @(Model.Activo ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                @(Model.Activo ? "Sí" : "No")
            </span>
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">
            <i class="bi bi-pencil-square"></i> Editar
        </a>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

</div>

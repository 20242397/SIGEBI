@model SIGEBI.Web.Models.PrestamoApi.PrestamoApiCreateModel

@{
    ViewData["Title"] = "Registrar Préstamo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-journal-plus"></i> Registrar nuevo préstamo
    </h2>

    <div class="card shadow-sm p-4 border-0">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="UsuarioId" class="form-label fw-bold">Usuario</label>
                    <input asp-for="UsuarioId" class="form-control" placeholder="ID del usuario" />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LibroId" class="form-label fw-bold">Libro</label>
                    <input asp-for="LibroId" class="form-control" placeholder="ID del libro" />
                    <span asp-validation-for="LibroId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EjemplarId" class="form-label fw-bold">Ejemplar</label>
                    <input asp-for="EjemplarId" class="form-control" placeholder="ID del ejemplar" />
                    <span asp-validation-for="EjemplarId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaVencimiento" class="form-label fw-bold">Fecha de vencimiento</label>
                    <input asp-for="FechaVencimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success shadow-sm">
                    <i class="bi bi-check-circle"></i> Guardar préstamo
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2 shadow-sm">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>



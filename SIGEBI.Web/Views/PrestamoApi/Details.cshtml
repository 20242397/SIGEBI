@model SIGEBI.Web.Models.PrestamoApi.PrestamoApiModel

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-eye-fill"></i> Detalles del préstamo
    </h2>

    <div class="card shadow-sm p-4 border-0">
        <dl class="row">

            <dt class="col-sm-3 fw-bold">Usuario</dt>
            <dd class="col-sm-9">@Model.UsuarioId</dd>

            <dt class="col-sm-3 fw-bold">Libro</dt>
            <dd class="col-sm-9">@Model.LibroId</dd>

            <dt class="col-sm-3 fw-bold">Ejemplar</dt>
            <dd class="col-sm-9">@Model.EjemplarId</dd>

            <dt class="col-sm-3 fw-bold">Fecha préstamo</dt>
            <dd class="col-sm-9">@Model.FechaPrestamo.ToShortDateString()</dd>

            <dt class="col-sm-3 fw-bold">Vencimiento</dt>
            <dd class="col-sm-9">@Model.FechaVencimiento.ToShortDateString()</dd>

            <dt class="col-sm-3 fw-bold">Devolución</dt>
            <dd class="col-sm-9">
                @(Model.FechaDevolucion?.ToShortDateString() ?? "—")
            </dd>

            <dt class="col-sm-3 fw-bold">Penalización</dt>
            <dd class="col-sm-9 text-danger fw-bold">
                @(Model.Penalizacion is null or 0 ? "—" : $"${Model.Penalizacion}")
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-danger") px-3 py-2">
                    @Model.Estado
                </span>
            </dd>

        </dl>

        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm text-dark">
                <i class="bi bi-pencil"></i> Extender
            </a>

            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

    </div>
</div>

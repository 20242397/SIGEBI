@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-speedometer2"></i> Panel del Estudiante 
    </h2>

    <div class="row g-4">

        <div class="col-md-4">
            <a href="/LibroApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-4 card-hover">
                    <i class="bi bi-book fs-1 text-primary"></i>
                    <h5 class="mt-3">Libros</h5>
                    <p class="text-muted">Consultar libros disponibles</p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/PrestamoApi/MisPrestamos" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-4 card-hover">
                    <i class="bi bi-arrow-left-right fs-1 text-warning"></i>
                    <h5 class="mt-3">Mis Préstamos</h5>
                    <p class="text-muted">Ver mis préstamos y devoluciones</p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="/NotificacionApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-4 card-hover">
                    <i class="bi bi-bell-fill fs-1 text-danger"></i>
                    <h5 class="mt-3">Notificaciones</h5>
                    <p class="text-muted">Alertas importantes</p>
                </div>
            </a>
        </div>

    </div>
</div>

<style>
    .card-hover {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 10px;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }
</style>

@{
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-speedometer2"></i> Panel General del Sistema (API)
    </h2>

    <div class="row g-4">

        <div class="col-md-3">
            <a href="/UsuarioApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-3 card-hover">
                    <i class="bi bi-people-fill fs-1 text-primary"></i>
                    <h5 class="mt-3">Usuarios</h5>
                    <p class="text-muted">Gestionar usuarios del sistema</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/LibroApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-3 card-hover">
                    <i class="bi bi-book-half fs-1 text-success"></i>
                    <h5 class="mt-3">Libros</h5>
                    <p class="text-muted">Gestionar catálogo de libros</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/EjemplarApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-3 card-hover">
                    <i class="bi bi-collection fs-1 text-warning"></i>
                    <h5 class="mt-3">Ejemplares</h5>
                    <p class="text-muted">Control de copias físicas</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/PrestamoApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-3 card-hover">
                    <i class="bi bi-arrow-left-right fs-1 text-danger"></i>
                    <h5 class="mt-3">Préstamos</h5>
                    <p class="text-muted">Registros y devoluciones</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/NotificacionApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-3 card-hover">
                    <i class="bi bi-bell-fill fs-1 text-info"></i>
                    <h5 class="mt-3">Notificaciones</h5>
                    <p class="text-muted">Alertas automáticas</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/ReporteApi/Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 text-center p-3 card-hover">
                    <i class="bi bi-bar-chart-fill fs-1 text-dark"></i>
                    <h5 class="mt-3">Reportes</h5>
                    <p class="text-muted">Estadísticas y exportación</p>
                </div>
            </a>
        </div>

    </div>

</div>

<style>
    .card-hover {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 10px;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }
</style>

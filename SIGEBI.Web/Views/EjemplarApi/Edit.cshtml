@model SIGEBI.Web.Models.EjemplarApi.EjemplarApiUpdateModel
@{
    ViewData["Title"] = "Editar Ejemplar";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-pencil-square"></i> Editar ejemplar</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select shadow-sm">
                    <option value="Disponible">Disponible</option>
                    <option value="Prestado">Prestado</option>
                    <option value="Reservado">Reservado</option>
                    <option value="Perdido">Perdido</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary shadow-sm">
                <i class="bi bi-save"></i> Guardar cambios
            </button>
            <a asp-action="Index" class="btn btn-secondary shadow-sm ms-2">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </form>
    </div>
</div>

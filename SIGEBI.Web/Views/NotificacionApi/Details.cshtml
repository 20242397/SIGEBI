@model SIGEBI.Web.Models.NotificacionApi.NotificacionApiModel

@{
    ViewData["Title"] = "Detalles de Notificación";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-3">
        <i class="bi bi-info-circle-fill"></i> Detalles de la Notificación
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <dl class="row">

                <dt class="col-sm-3 fw-semibold text-secondary">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Usuario ID</dt>
                <dd class="col-sm-9">@Model.UsuarioId</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Tipo</dt>
                <dd class="col-sm-9">@Model.Tipo</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Mensaje</dt>
                <dd class="col-sm-9">@Model.Mensaje</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Fecha de Envío</dt>
                <dd class="col-sm-9">@Model.FechaEnvio.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Enviado)
                    {
                        <span class="badge bg-success px-3 py-2">
                            <i class="bi bi-check-circle-fill"></i> Enviada
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark px-3 py-2">
                            <i class="bi bi-hourglass-split"></i> Pendiente
                        </span>
                    }
                </dd>

            </dl>

        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">

        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        <form method="post" asp-action="MarcarTodasEnviadas">
            <input type="hidden" name="usuarioId" value="@Model.UsuarioId" />

            <button type="submit"
                    class="btn btn-success shadow-sm"
                    title="Marcar todas las notificaciones del usuario como enviadas">
                <i class="bi bi-envelope-check-fill"></i> Marcar Todas del Usuario
            </button>
        </form>

    </div>

</div>

@model IEnumerable<SIGEBI.Web.Models.NotificacionApi.NotificacionApiModel>

@{
    ViewData["Title"] = "Gestión de Notificaciones";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Ok"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-octagon-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-bell-fill"></i> Gestión de Notificaciones
        </h2>

        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle"></i> Nueva Notificación
            </a>

            <form asp-action="GenerarAutomaticas" method="post" class="m-0 p-0">
                <button type="submit" class="btn btn-warning text-dark shadow-sm">
                    <i class="bi bi-robot"></i> Generar Automáticas
                </button>
            </form>
        </div>
    </div>

    <div class="row text-center mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-primary border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-primary fw-semibold"><i class="bi bi-bell"></i> Total</h6>
                    <h3>@Model.Count()</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-success border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-success fw-semibold"><i class="bi bi-check-circle"></i> Enviadas</h6>
                    <h3>@Model.Count(n => n.Enviado)</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-danger border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-danger fw-semibold"><i class="bi bi-hourglass-split"></i> Pendientes</h6>
                    <h3>@Model.Count(n => !n.Enviado)</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-warning border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-warning fw-semibold"><i class="bi bi-envelope-exclamation"></i> No Leídas</h6>
                    <h3>@Model.Count(n => !n.Enviado)</h3>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Index" method="get" class="card p-3 mb-4 shadow-sm">
        <div class="row g-3 align-items-end">

            <div class="col-md-3">
                <label class="form-label mb-1">ID Usuario</label>
                <input type="number" name="usuarioId" value="@ViewBag.UsuarioId" class="form-control form-control-sm" />
            </div>

            <div class="col-md-4">
                <label class="form-label mb-1">Tipo</label>
                <input type="text" name="tipo" value="@ViewBag.Tipo"
                       class="form-control form-control-sm" placeholder="Aviso, Penalización, etc." />
            </div>

            <div class="col-md-3">
                <label class="form-label mb-1">Estado</label>
                <select name="estado" class="form-select form-select-sm">
                    <option value="">Todos</option>
                    <option value="Enviada" selected="@(ViewBag.Estado == "Enviada")">Enviadas</option>
                    <option value="Pendiente" selected="@(ViewBag.Estado == "Pendiente")">Pendientes</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label mb-1">No leídas</label>
                <div class="form-check form-switch">
                    <input type="checkbox" name="noLeidas" value="true"
                           class="form-check-input" @(ViewBag.NoLeidas == true ? "checked" : "") />
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary btn-sm shadow-sm">
                    <i class="bi bi-search"></i> Buscar
                </button>

                <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
                    <i class="bi bi-arrow-clockwise"></i> Limpiar
                </a>
            </div>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Tipo</th>
                        <th class="text-start">Mensaje</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th style="width: 140px">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var n in Model)
                        {
                            <tr>
                                <td>@n.Id</td>
                                <td>@n.UsuarioId</td>
                                <td>@n.Tipo</td>
                                <td class="text-start">@n.Mensaje</td>
                                <td>@n.FechaEnvio.ToString("dd/MM/yyyy HH:mm")</td>

                                <td>
                                    @if (n.Enviado)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Enviada
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-hourglass-top"></i> Pendiente
                                        </span>
                                    }
                                </td>

                                <td>
                                    <a asp-action="Details" asp-route-id="@n.Id"
                                       class="btn btn-sm btn-outline-info me-1"
                                       title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <form asp-action="MarcarTodasEnviadas" method="post" class="d-inline p-0 m-0">
                                        <input type="hidden" name="usuarioId" value="@n.UsuarioId" />
                                        <button class="btn btn-sm btn-outline-success" title="Marcar enviadas">
                                            <i class="bi bi-envelope-check"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-muted py-4">
                                <i class="bi bi-inbox"></i> No hay notificaciones disponibles.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .form-control-sm, .form-select-sm {
        min-height: 2.2rem;
    }
</style>

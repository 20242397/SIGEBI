@model SIGEBI.Web.Models.NotificacionApi.NotificacionApiCreateModel

@{
    ViewData["Title"] = "Crear Notificación";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

    <h2 class="fw-bold text-primary">
        <i class="bi bi-bell-plus-fill"></i> Crear Notificación
    </h2>

    <div class="card shadow-sm mt-3">
        <div class="card-body">

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UsuarioId" class="form-label fw-semibold">ID del Usuario</label>
                    <input asp-for="UsuarioId" class="form-control shadow-sm" placeholder="Ej: 12" />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label fw-semibold">Tipo de Notificación</label>
                    <select asp-for="Tipo" class="form-select shadow-sm">
                        <option value="Aviso">Aviso</option>
                        <option value="Recordatorio">Recordatorio</option>
                        <option value="Vencimiento">Vencimiento</option>
                        <option value="Penalización">Penalización</option>
                        <option value="Personalizada">Personalizada</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Mensaje" class="form-label fw-semibold">Mensaje</label>
                    <textarea asp-for="Mensaje" rows="4"
                              class="form-control shadow-sm"
                              placeholder="Escriba el mensaje..."></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaEnvio" class="form-label fw-semibold">Fecha de Envío (opcional)</label>
                    <input asp-for="FechaEnvio" class="form-control shadow-sm" type="datetime-local" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>

                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-send-fill"></i> Crear Notificación
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>



@model IEnumerable<SIGEBI.Application.Dtos.Models.Configuration.Biblioteca.Libro.LibroGetDto>

@{
    ViewData["Title"] = "Gestión de Libros";
}

<h1 class="mb-4 fw-bold text-center">Gestión de Libros</h1>


@if (TempData["Ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Ok"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<div class="row text-center mb-4">
    <div class="col-md-2">
        <div class="card shadow-sm text-white bg-success">
            <div class="card-body fw-bold">
                <i class="bi bi-book"></i><br />
                Disponibles <br />
                <span class="fs-4">@Model.Count(x => x.Estado == "Disponible")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm bg-warning">
            <div class="card-body fw-bold">
                <i class="bi bi-arrow-left-right"></i><br />
                Prestados <br />
                <span class="fs-4">@Model.Count(x => x.Estado == "Prestado")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm bg-info text-white">
            <div class="card-body fw-bold">
                <i class="bi bi-bookmark-check"></i><br />
                Reservados <br />
                <span class="fs-4">@Model.Count(x => x.Estado == "Reservado")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm bg-dark text-white">
            <div class="card-body fw-bold">
                <i class="bi bi-exclamation-triangle"></i><br />
                Dañados <br />
                <span class="fs-4">@Model.Count(x => x.Estado == "Dañado")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm bg-danger text-white">
            <div class="card-body fw-bold">
                <i class="bi bi-x-octagon"></i><br />
                Inactivos <br />
                <span class="fs-4">@Model.Count(x => x.Estado == "Inactivo")</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form asp-action="Filtrar" method="post" class="row g-3">

            <div class="col-md-3">
                <input class="form-control" name="titulo" placeholder="Título..." />
            </div>

            <div class="col-md-3">
                <input class="form-control" name="autor" placeholder="Autor..." />
            </div>

            <div class="col-md-2">
                <input class="form-control" name="categoria" placeholder="Categoría..." />
            </div>

            <div class="col-md-2">
               
                <input class="form-control" type="number" name="anio" placeholder="Año" />
            </div>

            <div class="col-md-2">
                <select name="estado" class="form-select">
                    <option value="">-- Estado --</option>
                    <option>Disponible</option>
                    <option>Prestado</option>
                    <option>Reservado</option>
                    <option>Dañado</option>
                    <option>Inactivo</option>
                </select>
            </div>

            <div class="col-md-12 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel-fill"></i> Filtrar
                </button>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-eraser-fill"></i> Limpiar
                </a>

                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo
                </a>
            </div>
        </form>
    </div>
</div>


<table class="table table-bordered table-striped align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Autor</th>
            <th>ISBN</th>
            <th>Editorial</th>
            <th>Año</th>
            <th>Categoría</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="9" class="text-center text-muted">No se encontraron resultados.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Titulo</td>
                    <td>@item.Autor</td>
                    <td>@item.ISBN</td>
                    <td>@item.Editorial</td>
                    <td>@item.AñoPublicacion</td>
                    <td>@item.Categoria</td>

                    <td>
                        <span class="badge
                                        @(item.Estado == "Disponible" ? "bg-success" :
                                                              item.Estado == "Prestado" ? "bg-warning" :
                                                              item.Estado == "Reservado" ? "bg-info" :
                                                              item.Estado == "Dañado" ? "bg-dark" :
                                                              "bg-danger")">
                    @item.Estado
                </span>
            </td>

                    <td class="text-nowrap text-center">
                       
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1 text-white">
                            <i class="bi bi-eye-fill"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1">
                            <i class="bi bi-trash3"></i>
                        </a>

                       
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-arrow-repeat"></i> Estado
                            </button>

                            <ul class="dropdown-menu">
                        @foreach (var estado in new[] { "Disponible", "Prestado", "Reservado", "Dañado", "Inactivo" })
                                {
                                    <li>
                                        <form asp-action="CambiarEstado" asp-controller="LibroAdm" method="post" class="m-0 p-0">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="estado" value="@estado" />
                                            <button type="submit" class="dropdown-item">@estado</button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


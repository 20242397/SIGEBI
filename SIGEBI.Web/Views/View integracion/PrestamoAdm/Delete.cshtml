@model SIGEBI.Application.Dtos.Models.Configuration.Prestamo.PrestamoGetDto

@{
    ViewData["Title"] = "Eliminar Préstamo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash3"></i> Eliminar préstamo
    </h2>

    <div class="card shadow-sm p-4 border-danger">
        <p class="fw-bold text-danger mb-3">
            ¿Estás seguro que deseas eliminar este préstamo? Esta acción no se puede deshacer.
        </p>

        <dl class="row mb-3">
            <dt class="col-sm-3 fw-bold">Usuario</dt>
            <dd class="col-sm-9">@Model.UsuarioId</dd>

            <dt class="col-sm-3 fw-bold">Libro</dt>
            <dd class="col-sm-9">@Model.LibroId</dd>

            <dt class="col-sm-3 fw-bold">Fecha préstamo</dt>
            <dd class="col-sm-9">@Model.FechaPrestamo.ToShortDateString()</dd>

            <dt class="col-sm-3 fw-bold">Penalización</dt>
            <dd class="col-sm-9 text-danger fw-bold">$@Model.Penalizacion</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger shadow-sm">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 shadow-sm">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>

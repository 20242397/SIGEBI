@model SIGEBI.Web.Models.LibroApi.LibroApiUpdateModel

@{
    ViewData["Title"] = "Editar Libro";
}

<h2 class="fw-bold text-primary mb-4">
    <i class="bi bi-pencil-square"></i> Editar Libro
</h2>

<div class="card shadow-sm p-4">

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Titulo" class="form-label fw-bold"></label>
            <input asp-for="Titulo" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Autor" class="form-label fw-bold"></label>
            <input asp-for="Autor" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ISBN" class="form-label fw-bold"></label>
            <input asp-for="ISBN" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Editorial" class="form-label fw-bold"></label>
            <input asp-for="Editorial" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="AnioPublicacion" class="form-label fw-bold"></label>
            <input asp-for="AnioPublicacion" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Categoria" class="form-label fw-bold"></label>
            <input asp-for="Categoria" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Guardar Cambios
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </form>

</div>


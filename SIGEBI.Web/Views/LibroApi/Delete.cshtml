@model SIGEBI.Web.Models.LibroApi.LibroApiModel

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2 class="fw-bold text-danger mb-4">
    <i class="bi bi-trash-fill"></i> Eliminar Libro
</h2>

<div class="alert alert-danger shadow-sm">
    <i class="bi bi-exclamation-octagon-fill"></i>
    ¿Seguro que deseas eliminar este libro?
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.Autor</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.Estado</span>
            </dd>
        </dl>

        <form asp-action="DeleteConfirmado" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Eliminar Definitivamente
                </button>
            </div>
        </form>

    </div>
</div>

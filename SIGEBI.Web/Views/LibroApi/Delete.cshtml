@model SIGEBI.Web.Models.LibroApi.LibroApiModel

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2 class="fw-bold text-danger mb-4">
    <i class="bi bi-trash"></i> Confirmar Eliminación
</h2>

<div class="card border-danger shadow-sm">

    <div class="card-body">

        <h5 class="text-danger fw-bold">¿Desea eliminar este libro?</h5>

        <p><strong>Título:</strong> @Model.Titulo</p>
        <p><strong>Autor:</strong> @Model.Autor</p>
        <p><strong>ISBN:</strong> @Model.ISBN</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <button type="submit" class="btn btn-danger shadow-sm">
                <i class="bi bi-trash"></i> Eliminar
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2 shadow-sm">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </form>

    </div>

</div>

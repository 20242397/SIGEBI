@model SIGEBI.Web.Models.LibroApi.LibroApiModel

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h2 class="fw-bold text-primary mb-4">
    <i class="bi bi-info-circle"></i> Detalles del Libro
</h2>

<div class="card shadow-sm p-4">

    <dl class="row">

        <dt class="col-sm-3 fw-bold">Título</dt>
        <dd class="col-sm-9">@Model.Titulo</dd>

        <dt class="col-sm-3 fw-bold">Autor</dt>
        <dd class="col-sm-9">@Model.Autor</dd>

        <dt class="col-sm-3 fw-bold">ISBN</dt>
        <dd class="col-sm-9">@Model.ISBN</dd>

        <dt class="col-sm-3 fw-bold">Editorial</dt>
        <dd class="col-sm-9">@Model.Editorial</dd>

        <dt class="col-sm-3 fw-bold">Año</dt>
        <dd class="col-sm-9">@Model.AnioPublicacion</dd>

        <dt class="col-sm-3 fw-bold">Categoría</dt>
        <dd class="col-sm-9">@Model.Categoria</dd>

        <dt class="col-sm-3 fw-bold">Estado</dt>
        <dd class="col-sm-9">
            <span class="badge bg-@(
                  Model.Estado == "Disponible" ? "success" :
                  Model.Estado == "Prestado" ? "warning" :
                  Model.Estado == "Reservado" ? "info" :
                  Model.Estado == "Dañado" ? "dark" : "danger"
                        )">
                @Model.Estado
            </span>
        </dd>

    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm">
            <i class="bi bi-pencil-square"></i> Editar
        </a>

        <a asp-action="Index" class="btn btn-secondary shadow-sm ms-2">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

</div>

@model SIGEBI.Web.Models.LibroApi.LibroApiModel

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h2 class="fw-bold text-info mb-4">
    <i class="bi bi-eye-fill"></i> Detalles del Libro
</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.Autor</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>

            <dt class="col-sm-3">Editorial</dt>
            <dd class="col-sm-9">@Model.Editorial</dd>

            <dt class="col-sm-3">Año</dt>
            <dd class="col-sm-9">@Model.AñoPublicacion</dd>

            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Model.Categoria</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.Estado</span>
            </dd>

        </dl>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">
                <i class="bi bi-pencil"></i> Editar
            </a>
        </div>

    </div>
</div>

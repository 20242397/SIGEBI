@model SIGEBI.Web.Models.ReporteApi.ReporteApiCreateModel

@{
    ViewData["Title"] = "Generar Reporte (API)";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="text-success fw-bold mb-4">
        <i class="bi bi-file-earmark-plus"></i> Generar Nuevo Reporte
    </h2>

    <form asp-action="Create" method="post" class="card shadow-sm p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="UsuarioId" class="form-label">ID Usuario</label>
                <input asp-for="UsuarioId" class="form-control" placeholder="Ej: 1" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Tipo" class="form-label">Tipo de Reporte</label>
                <select asp-for="Tipo" class="form-select">
                    <option value="">Seleccione...</option>
                    <option value="prestamos">Préstamos</option>
                    <option value="usuarios activos">Usuarios Activos</option>
                    <option value="penalizaciones">Penalizaciones</option>
                    <option value="devoluciones">Devoluciones</option>
                    <option value="libros mas prestados">Libros Más Prestados</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Contenido" class="form-label">Contenido (opcional)</label>
                <input asp-for="Contenido" class="form-control" placeholder="Texto adicional..." />
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaInicio" class="form-label">Fecha Inicio</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaFin" class="form-label">Fecha Fin</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-play-circle"></i> Generar
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model SIGEBI.Application.Dtos.Models.Configuration.Reporte.ReporteCreateDto

@{
    ViewData["Title"] = "Generar Reporte";
}

<div class="container mt-4">
    <h2 class="text-success fw-bold mb-4">
        <i class="bi bi-file-earmark-plus"></i> Generar Nuevo Reporte
    </h2>

    <form asp-action="Create" method="post" class="card shadow-sm p-4">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">ID Usuario</label>
                <input asp-for="UsuarioId" class="form-control" placeholder="Ej: 1" required />
            </div>

            <div class="col-md-4">
                <label class="form-label">Tipo de Reporte</label>
                <select asp-for="Tipo" class="form-select" required>
                    <option value="">Seleccione...</option>
                    <option value="prestamos">Préstamos</option>
                    <option value="usuarios activos">Usuarios Activos</option>
                    <option value="penalizaciones">Penalizaciones</option>
                    <option value="devoluciones">Devoluciones</option>
                    <option value="libros mas prestados">Libros Más Prestados</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Contenido (opcional)</label>
                <input asp-for="Contenido" class="form-control" placeholder="Texto adicional..." />
            </div>

            <div class="col-md-6">
                <label class="form-label">Fecha Inicio</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Fecha Fin</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-play-circle"></i> Generar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

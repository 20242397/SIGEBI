@model IEnumerable<SIGEBI.Application.Dtos.Models.Configuration.Reporte.ReporteGetDto>

@{
    ViewData["Title"] = "Gestión de Reportes";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">

  
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

   
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-bar-chart-fill"></i> Gestión de Reportes
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Generar Nuevo Reporte
        </a>
    </div>

   
    <div class="row mb-4 text-center">
        <div class="col-md-3 mb-3">
            <div class="card border-primary border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-primary fw-semibold"><i class="bi bi-graph-up"></i> Total Reportes</h6>
                    <h3>@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-success border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-success fw-semibold"><i class="bi bi-calendar-week"></i> Últimos 7 días</h6>
                    <h3>@Model.Count(r => r.FechaGeneracion >= DateTime.Now.AddDays(-7))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-warning border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-warning fw-semibold"><i class="bi bi-book"></i> Préstamos</h6>
                    <h3>@Model.Count(r => r.Tipo.ToLower().Contains("prestamo"))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-danger border-2 shadow-sm">
                <div class="card-body">
                    <h6 class="text-danger fw-semibold"><i class="bi bi-exclamation-circle"></i> Penalizaciones</h6>
                    <h3>@Model.Count(r => r.Tipo.ToLower().Contains("penalizacion"))</h3>
                </div>
            </div>
        </div>
    </div>

   
    <form asp-action="Index" method="get" class="card p-3 mb-4 shadow-sm">
        <div class="row g-2 g-md-3 align-items-end">
          
            <div class="col-12 col-sm-6 col-md-4">
                <label class="form-label mb-1">Tipo de Reporte</label>
                <input type="text" name="tipo" value="@ViewBag.Tipo"
                       class="form-control form-control-sm"
                       placeholder="Préstamos, Penalizaciones..." />
            </div>

           
            <div class="col-6 col-sm-3 col-md-3">
                <label class="form-label mb-1">Desde</label>
                <input type="date" name="inicio" value="@ViewBag.Inicio"
                       class="form-control form-control-sm" />
            </div>


            <div class="col-6 col-sm-3 col-md-3">
                <label class="form-label mb-1">Hasta</label>
                <input type="date" name="fin" value="@ViewBag.Fin"
                       class="form-control form-control-sm" />
            </div>

           
            <div class="col-12 col-md-2 d-flex justify-content-end gap-2 mt-3 mt-md-0">
                <button type="submit" class="btn btn-primary btn-sm shadow-sm">
                    <i class="bi bi-search"></i> Buscar
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
                    <i class="bi bi-arrow-repeat"></i> Limpiar
                </a>
            </div>
        </div>
    </form>

   
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Tipo</th>
                        <th>Fecha Generación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.UsuarioId</td>
                                <td>@item.Tipo</td>
                                <td>@item.FechaGeneracion.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="d-flex justify-content-center gap-1">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-info" title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Exportar" asp-route-id="@item.Id" asp-route-formato="txt"
                                       class="btn btn-sm btn-outline-secondary" title="Exportar TXT">
                                        <i class="bi bi-file-earmark-text"></i>
                                    </a>
                                    <a asp-action="Exportar" asp-route-id="@item.Id" asp-route-formato="pdf"
                                       class="btn btn-sm btn-outline-danger" title="Exportar PDF">
                                        <i class="bi bi-filetype-pdf"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-inbox"></i> No se encontraron reportes.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .form-control-sm, .form-select-sm {
        min-height: 2.2rem;
    }

    {
        transform: scale(.9);
    }

    }
</style>

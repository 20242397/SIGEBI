@model SIGEBI.Application.Dtos.Models.Configuration.Usuario.UsuarioGetDto

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<h2 class="fw-bold mb-4">
    <i class="bi bi-person-vcard me-2"></i>Detalles del Usuario
</h2>

<div class="card shadow-sm border-0 p-4" style="max-width:650px;margin:auto;">

    <!-- Nombre -->
    <div class="mb-3">
        <h6 class="text-muted mb-1">
            <i class="bi bi-person-fill me-2"></i>Nombre
        </h6>
        <span class="fw-semibold">@Model.Nombre @Model.Apellido</span>
    </div>

    <!-- Email -->
    <div class="mb-3">
        <h6 class="text-muted mb-1">
            <i class="bi bi-envelope-fill me-2"></i>Email
        </h6>
        <span>@Model.Email</span>
    </div>

    <!-- Teléfono -->
    <div class="mb-3">
        <h6 class="text-muted mb-1">
            <i class="bi bi-telephone-fill me-2"></i>Teléfono
        </h6>
        <span>@Model.PhoneNumber</span>
    </div>

    <!-- Rol -->
    <div class="mb-3">
        <h6 class="text-muted mb-1">
            <i class="bi bi-shield-lock-fill me-2"></i>Rol
        </h6>
        <span class="badge bg-primary px-3 py-2" style="font-size:0.9rem;">
            @Model.Role
        </span>
    </div>

    <!-- Estado -->
    <div class="mb-3">
        <h6 class="text-muted mb-1">
            <i class="bi bi-flag-fill me-2"></i>Estado
        </h6>

        @if (Model.Estado == "Aprobado")
        {
            <span class="badge bg-success px-3 py-2">Aprobado</span>
        }
        else if (Model.Estado == "Pendiente")
        {
            <span class="badge bg-warning text-dark px-3 py-2">Pendiente</span>
        }
        else if (Model.Estado == "Bloqueado")
        {
            <span class="badge bg-danger px-3 py-2">Bloqueado</span>
        }
        else
        {
            <span class="badge bg-secondary px-3 py-2">@Model.Estado</span>
        }
    </div>

    <!-- Activo -->
    <div class="mb-4">
        <h6 class="text-muted mb-1">
            <i class="bi bi-toggle-on me-2"></i>Activo
        </h6>

        @if (Model.Activo)
        {
            <span class="badge bg-success px-3 py-2">Activo</span>
        }
        else
        {
            <span class="badge bg-danger px-3 py-2">Inactivo</span>
        }
    </div>

    <!-- Botón -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

</div>

@model SIGEBI.Application.Dtos.Models.Configuration.Usuario.UsuarioGetDto

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="fw-bold mb-4"><i class="bi bi-person-badge"></i> Detalles del Usuario</h2>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>

        <dt class="col-sm-3 fw-bold">Correo</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3 fw-bold">Teléfono</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3 fw-bold">Rol</dt>
        <dd class="col-sm-9">@Model.Role</dd>

        <dt class="col-sm-3 fw-bold">Estado</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                @Model.Estado
            </span>
        </dd>

        <dt class="col-sm-3 fw-bold">Activo</dt>
        <dd class="col-sm-9">
            <span class="fw-bold @(Model.Activo ? "text-success" : "text-danger")">
                @(Model.Activo ? "Sí" : "No")
            </span>
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

@model SIGEBI.Application.Dtos.Models.Configuration.Usuario.UsuarioUpdateDto

@{
    ViewData["Title"] = "Editar Usuario";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<h2 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Editar Usuario</h2>

<div class="card shadow-sm p-4" style="max-width: 750px;">
    <form asp-action="Edit" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <!-- Nombre -->
        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-person-fill me-1"></i> @Html.DisplayNameFor(m => m.Nombre)
            </label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <!-- Apellido -->
        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-person-badge-fill me-1"></i> @Html.DisplayNameFor(m => m.Apellido)
            </label>
            <input asp-for="Apellido" class="form-control" />
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-envelope-fill me-1"></i> @Html.DisplayNameFor(m => m.Email)
            </label>
            <input asp-for="Email" class="form-control" />
        </div>

        <!-- PhoneNumber -->
        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-telephone-fill me-1"></i> @Html.DisplayNameFor(m => m.PhoneNumber)
            </label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <!-- Role -->
        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-shield-lock-fill me-1"></i> Rol
            </label>
            <select asp-for="Role" class="form-select">
                <option value="">Seleccione...</option>
                <option value="Administrador">Administrador</option>
                <option value="Bibliotecario">Bibliotecario</option>
                <option value="Docente">Docente</option>
                <option value="Estudiante">Estudiante</option>
            </select>
        </div>

        <!-- Estado -->
        <div class="mb-3">
            <label class="form-label">
                <i class="bi bi-flag-fill me-1"></i> Estado
            </label>
            <select asp-for="Estado" class="form-select">
                <option value="">Seleccione...</option>
                <option value="Pendiente">Pendiente</option>
                <option value="Aprobado">Aprobado</option>
                <option value="Bloqueado">Bloqueado</option>
            </select>
        </div>

        <!-- Activo -->
        <div class="form-check mb-3">
            <input asp-for="Activo" class="form-check-input" type="checkbox" value="true" />
            <input type="hidden" name="Activo" value="false" />
            <label class="form-check-label" asp-for="Activo">
                <i class="bi bi-toggle-on"></i> Activo
            </label>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save2 me-1"></i> Guardar
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

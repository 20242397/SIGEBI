@model IEnumerable<SIGEBI.Application.Dtos.Models.Configuration.Usuario.UsuarioGetDto>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="fw-bold text-center mb-4">Gestión de Usuarios</h2>

<!-- ✅ Tarjetas de estadísticas -->
<div class="row text-center mb-4 g-3">
    <div class="col-md-2">
        <div class="card shadow-sm border-0">
            <div class="card-body fw-bold">
                Total <br />
                <span class="fs-3">@Model.Count()</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-success border-2">
            <div class="card-body text-success fw-bold">
                Activos <br />
                <span class="fs-3">@Model.Count(u => u.Estado?.Trim().ToLower() == "activo")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-danger border-2">
            <div class="card-body text-danger fw-bold">
                Inactivos <br />
                <span class="fs-3">@Model.Count(u => u.Estado?.Trim().ToLower() == "inactivo")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-dark border-2">
            <div class="card-body fw-bold">
                Admins <br />
                <span class="fs-3">@Model.Count(u => u.Role?.Trim().ToLower() == "admin")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-primary border-2">
            <div class="card-body text-primary fw-bold">
                Docentes <br />
                <span class="fs-3">@Model.Count(u => u.Role?.Trim().ToLower() == "docente")</span>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card shadow-sm border-warning border-2">
            <div class="card-body text-warning fw-bold">
                Estudiantes <br />
                <span class="fs-3">@Model.Count(u => u.Role?.Trim().ToLower() == "estudiante")</span>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Buscador alineado -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-person-plus-fill"></i> Crear Usuario
    </a>

    <form method="post" asp-action="BuscarPorEmail" class="d-flex align-items-center" style="max-width: 350px;">
        <input type="email" name="email" class="form-control shadow-sm me-2" placeholder="Buscar por correo..." />
        <button class="btn btn-primary shadow-sm">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<!-- ✅ Mensajes del sistema -->
@if (TempData["Ok"] != null)
{
    <div class="alert alert-success shadow-sm">
        <i class="bi bi-check-circle-fill"></i> @TempData["Ok"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger shadow-sm">
        <i class="bi bi-x-circle-fill"></i> @TempData["Error"]
    </div>
}

<!-- ✅ Tabla de usuarios -->
<table class="table table-hover table-striped table-bordered shadow-sm align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Rol</th>
            <th>Estado</th>
            <th>Activo</th>
            <th style="width: 230px;">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre @u.Apellido</td>
                <td>@u.Email</td>
                <td>@u.PhoneNumber</td>

                <!-- ✅ Rol -->
                <td>
                    @if (string.IsNullOrWhiteSpace(u.Role))
                    {
                        <span class="badge bg-secondary">Sin rol</span>
                    }
                    else if (u.Role.Trim().ToLower() == "admin")
                    {
                        <span class="badge bg-primary">Admin</span>
                    }
                    else if (u.Role.Trim().ToLower() == "docente")
                    {
                        <span class="badge bg-info text-dark">Docente</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Estudiante</span>
                    }
                </td>

                <!-- ✅ Estado -->
                <td>
                    <span class="badge @(u.Estado == "Activo" ? "bg-success" : "bg-danger") p-2">
                        <i class="bi @(u.Estado == "Activo" ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                        @u.Estado
                    </span>
                </td>

                <!-- ✅ Activo: True / False -->
                <td>
                    <span class="fw-bold @(u.Activo ? "text-success" : "text-danger")">
                        <i class="bi @(u.Activo ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                        @(u.Activo ? "True" : "False")
                    </span>
                </td>

                <!-- ✅ Acciones -->
                <td class="text-nowrap">

                    <!-- Editar -->
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm me-1" data-bs-toggle="tooltip" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <!-- Detalles -->
                    <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-info btn-sm text-white me-1" data-bs-toggle="tooltip" title="Ver detalles">
                        <i class="bi bi-eye-fill"></i>
                    </a>

                    <!-- Eliminar -->
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm me-1" data-bs-toggle="tooltip" title="Eliminar">
                        <i class="bi bi-trash3"></i>
                    </a>

                    <!-- Activar / Desactivar -->
                    <a asp-action="CambiarEstado"
                       asp-route-id="@u.Id"
                       asp-route-activo="@(u.Activo ? "false" : "true")"
                       class="btn @(u.Activo ? "btn-secondary" : "btn-success") btn-sm me-1"
                       data-bs-toggle="tooltip"
                       title="@(u.Activo ? "Desactivar usuario" : "Activar usuario")">
                        <i class="bi @(u.Activo ? "bi-toggle-off" : "bi-toggle-on")"></i>
                    </a>

                    <!-- Dropdown roles -->
                    <div class="btn-group">
                        <button class="btn btn-outline-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-person-gear"></i> Rol
                        </button>
                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-action="AsignarRol" asp-route-id="@u.Id" asp-route-nuevoRol="Admin"><i class="bi bi-shield-lock-fill text-secondary"></i> Admin</a></li>
                            <li><a class="dropdown-item" asp-action="AsignarRol" asp-route-id="@u.Id" asp-route-nuevoRol="Docente"><i class="bi bi-person-video3 text-primary"></i> Docente</a></li>
                            <li><a class="dropdown-item" asp-action="AsignarRol" asp-route-id="@u.Id" asp-route-nuevoRol="Estudiante"><i class="bi bi-mortarboard-fill text-warning"></i> Estudiante</a></li>
                        </ul>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Activar tooltips Bootstrap
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el));
    </script>
}
